<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :order_date %>
    <%= f.input :customer_id %>
    <%= f.input :supplier_id %>
    <%= f.input :delivery_address %>
    <%= f.input :total_order_value %>
    <%= f.input :currency %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
